{% extends 'base-auth.html.twig' %}

{% block title %}{% trans %}Reset your password{% endtrans %}{% endblock %}

{% block body %}
    <div class="col-md-8">
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <h1>{% trans %}Reset your password{% endtrans %}</h1>
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                </div>
            </div>
            <div class="card p-4">
                <div class="card-body">
                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                {% trans %}Enter your email address and we we will send you a link to reset your password.{% endtrans %}
                            </small>
                        </div>

                        <button class="btn btn-primary">{% trans %}Send password reset email{% endtrans %}</button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}