{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<div class="col-md-8">
    <div class="card-group">
        <div class="card p-4">
            <div class="card-body text-center">
                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% else %}
                    <a class="btn btn-primary btn-lg btn-outline-light mt-3" href="{{ path('app_login') }}">Sign in</a> <br/>
                {% endif %}
            </div>
        </div>
        <div class="card text-white bg-primary p-4 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <a class="btn btn-lg btn-outline-light mt-3" href="{{ path('app_register') }}">Sign up</a> <br/>
            </div>
        </div>
    </div>
</div>

{% endblock %}
