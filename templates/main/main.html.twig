{% extends 'base-auth.html.twig' %}

{% block title %}{% trans %}Main{% endtrans %}{% endblock %}

{% block body %}
<div class="col-md-8">
    <div class="card-group">
        <div class="card p-4">
            <div class="card-body text-center">
                {% if app.user %}
{#                    <div class="mb-3">#}
                        <p>
                            {% trans with {'%name%': app.user.username} %}You are logged in as %name%{% endtrans %}, <a href="{{ path('app_logout') }}">{% trans %}Logout{% endtrans %}</a>
                        </p>
                        <p>
                            <a class="btn btn-lg btn-link mt-3" href="{{ path('app_profile') }}">{% trans %}Profile{% endtrans %}</a>
                        </p>
{#                    </div>#}
                {% else %}
                    <a id="SignIn" class="btn btn-primary btn-lg btn-outline-light mt-3" href="{{ path('app_login') }}">{% trans %}Sign in{% endtrans %}</a> <br/>
                {% endif %}
            </div>
        </div>
        <div class="card text-white bg-primary p-4 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <a id="SignUp" class="btn btn-lg btn-outline-light mt-3" href="{{ path('app_register') }}">{% trans %}Sign up{% endtrans %}</a> <br/>
            </div>
        </div>
    </div>
</div>

{% endblock %}
